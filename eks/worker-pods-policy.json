{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "JenkinsServer",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue"
      ],
      "Resource": ["*"]
    },
    {
      "Sid": "JenkinsJobs",
      "Effect": "Allow",
      "Action": [
        "apigateway:*",
        "acm:*",
        "autoscaling:*",
        "budgets:*",
        "ce:*",
        "cloudfront:*",
        "cloudwatch:*",
        "dynamodb:*",
        "ec2:*",
        "ecr:*",
        "ecs:*",
        "elasticloadbalancing:*",
        "events:*",
        "iam:*",
        "lambda:*",
        "logs:*",
        "rds:*",
        "route53:*",
        "s3:*",
        "sns:*",
        "secretsmanager:*",
        "synthetics:*"
      ],
      "Resource": ["*"]
    }
  ]
}